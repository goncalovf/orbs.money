root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2
quote_type = single # EditorConfig for VS Code doesn't support this yet. https://marketplace.visualstudio.com/items?itemName=EditorConfig.EditorConfig#supported-properties

[*.{css,scss}]
indent_style = space
indent_size = 2
